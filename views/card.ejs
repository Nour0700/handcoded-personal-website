<%- include('partials/header'); -%>
<!-- Page Content -->
<div class="container">
	<div class="card border-0 shadow my-5 mx-auto">
		<div class="card-body p-5">
			<h1 ><%= title %></h1>
			<span>
				<% if(creationDate !== ""){%>
				<p class="text-muted meta">Project publishing date: <%= creationDate %> </p>
				<%  } %>
			</span>
			<div class="text-center">
				<img class="card-img-top card-image" src="<%= imageUrl %>" alt="">
			</div>
			<div class="my-card-body">

				<p id="rich-text-body">
					<script>
						document.getElementById('rich-text-body').innerHTML = '<%- content %>'; 
					</script>
				</p>
			</div>
			<br>
			<hr>
			<div id="disqus_thread"></div>
			<script>
				/**
				*  RECOMMENDED CONFIGURATION VARIABLES: EDIT AND UNCOMMENT THE SECTION BELOW TO INSERT DYNAMIC VALUES FROM YOUR PLATFORM OR CMS.
				*  LEARN WHY DEFINING THESE VARIABLES IS IMPORTANT: https://disqus.com/admin/universalcode/#configuration-variables*/
				var disqus_config = function () {
					this.page.url =" <%- pageUrl %> ";  
					this.page.identifier = "<%- pageIdentifier %>" ;
				};
		
				(function () {
					var d = document, s = d.createElement('script');
					s.src = 'https://sehebi.disqus.com/embed.js';
					s.setAttribute('data-timestamp', +new Date());
					(d.head || d.body).appendChild(s);
				})();
			</script>
			<noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by
					Disqus.</a></noscript>
		</div>
	</div>
</div>
<%- include('partials/footer'); -%>